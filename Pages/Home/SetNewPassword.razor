@page "/set-new-password"
@inject NavigationManager NavigationManager

<div class="row-layout set-new-password-container">
    <div class="column-layout form">
        <div class="column-layout group">
            <div class="column-layout group_1">
                <h4 class="content">
                    Set new password
                </h4>
                <p class="typography__body-2 content">
                    Please, type your new password and click confirm
                </p>
            </div>
            <IgbInput DisplayType="InputType.Password" Label="Password" Placeholder="Min 8 characters" Outlined="true" class="input" set-new-password-scope></IgbInput>
            <IgbInput DisplayType="InputType.Password" Label="Password" Placeholder="Repeat password" Outlined="true" class="input" set-new-password-scope></IgbInput>
            <IgbButton @onclick="@(e => Navigate("create-login"))" class="confirm-new-password" set-new-password-scope>
                CONFIRM NEW PASSWORD
                <IgbRipple></IgbRipple>
            </IgbButton>
        </div>
    </div>
</div>

@code {
    private void Navigate(string path)
    {
        NavigationManager.NavigateTo(path);
    }
}
